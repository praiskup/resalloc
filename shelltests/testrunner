. ./testlib

result=true
for TEST_NAME; do
    echo "===> running test 'tests/$TEST_NAME'"

    export TMPDIR=$(mktemp -d /tmp/resalloc-tests-$TEST_NAME-XXXXXXX)

    status=OK
    if ! ./tests/"$TEST_NAME" ; then
        status=FAIL
        result=false
    else
        test -d "$TMPDIR" && rm -rf "$TMPDIR"
    fi

    echo "                              ---> [ $status ]"
done

$result

